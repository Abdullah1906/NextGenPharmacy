@model MediPOS.Models.ProductIndexViewModel
@{
    Layout = "~/Views/Shared/_landingLayout.cshtml";
}



<div class="site-blocks-cover" style="background-image: url('/landing/images/hero_1.jpg');">
    <div class="container">
        <div class="row">
            <div class="col-lg-7 mx-auto order-lg-2 align-self-center">
                <div class="site-block-cover-content text-center">
                    <h2 class="sub-title">Effective Medicine, New Medicine Everyday</h2>
                    <h1>Welcome To Pharma</h1>
                    <p>
                        <a asp-controller="Landing" asp-action="Shop" class="btn btn-primary px-5 py-3">Shop Now</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="site-section">
    <div class="container">
        <div class="row align-items-stretch section-overlap">
            <div class="col-md-6 col-lg-4 mb-4 mb-lg-0">
                <div class="banner-wrap bg-primary h-100">
                    <a href="#" class="h-100">
                        <h5>Free <br> Shipping</h5>
                        <p>
                            we’re excited to offer free shipping on every order,
                            <strong> with no minimum purchase required.</strong>
                        </p>
                    </a>
                </div>
            </div>
            <div class="col-md-6 col-lg-4 mb-4 mb-lg-0">
                <div class="banner-wrap h-100">
                    <a href="#" class="h-100">
                        <h5>Season <br> Sale 50% Off</h5>
                        <p>
                            Don’t miss out on our biggest sale of the season!
                            <strong> Enjoy an incredible 50% off on a wide selection of products.</strong>
                        </p>
                    </a>
                </div>
            </div>
            <div class="col-md-6 col-lg-4 mb-4 mb-lg-0">
                <div class="banner-wrap bg-warning h-100">
                    <a href="#" class="h-100">
                        <h5>Buy <br> A Gift Card</h5>
                        <p>
                            Looking for the perfect gift? Now’s the time to shop!  
                            <strong>Enjoy up to 50% off on selected items.</strong>
                          
                        </p>
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>

<div class="site-section">
    <div class="container">
        <div class="row">
            <div class="title-section text-center col-12">
                <h2 class="text-uppercase">Popular Products</h2>
            </div>
        </div>

        <div class="row">
            @foreach (var product in Model.Products)
            {
                <div class="col-sm-6 col-lg-4 text-center item mb-4">
                    @* Optionally show sale tag if stock is low or a condition you define *@
                    @if (product.Price < 50)
                    {
                        <span class="tag">Sale</span>
                    }

                    <a asp-controller="Landing" asp-action="Shop_Single" asp-route-id="@product.Id">
                        <img src="@product.ImageUrl" alt="@product.ProductName" class="img-fluid mx-auto d-block"
                             style="width: 200px; height: 200px; object-fit: cover;" />
                    </a>
                    <h3 class="text-dark">
                        <a asp-controller="Landing" asp-action="Shop_Single" asp-route-id="@product.Id">
                            @product.ProductName
                        </a>
                    </h3>
                    <p class="price">
                        @* Show discount if price is below threshold *@
                        @if (product.Price >2500 && product.Price < 8000)
                        {
                            <text>
                                <del>৳@(product.Price + 100)</del> &mdash; ৳@product.Price
                            </text>
                        }
                        else if (product.Price > 50 && product.Price < 2500)
                        {
                            <text>
                                <del>৳@(product.Price + 40)</del> &mdash; ৳@product.Price
                            </text>
                        }
                        else 
                        {
                            <text>
                                ৳@product.Price
                            </text>
                        }
                    </p>

                </div>
            }
        </div>

        <div class="row mt-5">
            <div class="col-12 text-center">
                <a asp-controller="Landing" asp-action="Shop" class="btn btn-primary px-4 py-3">View All Products</a>
            </div>
        </div>
    </div>
</div>


<div class="site-section bg-light">
    <div class="container">
        <div class="row">
            <div class="title-section text-center col-12">
                <h2 class="text-uppercase">New Products</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 block-3 products-wrap">
                <div class="nonloop-block-3 owl-carousel">
                    @foreach (var product in Model.LatestProducts)
                    {
                        <div class="text-center item mb-4">
                            <a asp-controller="Landing" asp-action="Shop_Single" asp-route-id="@product.Id">
                                <img src="@product.ImageUrl" alt="@product.ProductName" class="img-fluid"
                                     style="width: 200px; height: 200px; object-fit: cover;" />
                            </a>
                            <h3 class="text-dark">
                                <a asp-controller="Landing" asp-action="Shop_Single" asp-route-id="@product.Id">
                                    @product.ProductName
                                </a>
                            </h3>
                            <p class="price">৳@product.Price</p>
                        </div>
                    }
                </div>

            </div>
        </div>
    </div>
</div>

