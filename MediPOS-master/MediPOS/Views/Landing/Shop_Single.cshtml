@model ProductIndexVm
@{
    Layout = "~/Views/Shared/_landingLayout.cshtml";
}

<div class="bg-light py-3">
    <div class="container">
        <div class="row">
            <div class="col-md-12 mb-0">
                <a asp-controller="Landing" asp-action="Index">Home</a> <span class="mx-2 mb-0">/</span>
                <a asp-controller="Landing" asp-action="Shop">Store</a> <span class="mx-2 mb-0">/</span>
                <strong class="text-black">@Model.Product?.ProductName </strong>
            </div>
        </div>
    </div>
</div>

<div class="site-section">
    <div class="container">
        <div class="row">
            <!-- Left side: Image inside card -->
            <div class="col-md-5 mr-auto">
                <div class="card" style="border: 2px solid #28a745;">
                    <div class="card-body text-center">
                        <img src="@Model.Product?.ImageUrl" alt="@(Model.Product?.ProductName ?? "Product Image")" class="img-fluid p-3" />
                    </div>
                </div>
            </div>

            <!-- Right side: Product details inside card -->
            <div class="col-md-6">
                <div class="card border">
                    <div class="card-body">
                        <h2 class="text-black">@Model.Product?.ProductName</h2>
                        <p>
                            Relieves mild to moderate pain such as headaches, toothaches, or muscle aches.
                            Also effective for reducing fever. Gentle on the stomach and suitable for most users.
                            Fast-acting antihistamine for relief from allergies such as sneezing, runny nose, and itchy eyes.
                            Non-drowsy formula allows for daily use without affecting alertness.
                        </p>

                        <p>Quantity of Stock: @(Model.Product?.Stock ?? 0)</p>

                        @if ((Model.Product?.Stock ?? 0) <= 0)
                        {
                            <p class="text-danger font-weight-bold">Out of Stock</p>
                        }

                        <p class="price">
                            @{
                                var price = Model.Product?.Price ?? 0;
                            }
                            @if (price > 2500 && price < 8000)
                            {
                                <text><del>৳@(price + 100)</del> <strong class="text-primary h4">— ৳@price</strong></text>
                            }
                            else if (price > 50 && price < 2500)
                            {
                                <text><del>৳@(price + 40)</del> <strong class="text-primary h4">— ৳@price</strong></text>
                            }
                            else
                            {
                                <strong class="text-primary h4">৳@price</strong>
                            }
                        </p>

                        <form asp-controller="Landing" asp-action="Cart" method="post">
                            <input type="hidden" name="productId" value="@Model.Product?.Id" />

                            <div class="mb-4">
                                <div class="input-group mb-3" style="max-width: 220px;">
                                    <div class="input-group-prepend">
                                        <button class="btn btn-outline-primary js-btn-minus" type="button" @((Model.Product?.Stock ?? 0) <= 0 ? "disabled=\"disabled\"" : "")>&minus;</button>
                                    </div>
                                    <input type="number"
                                           class="form-control text-center quantity-input"
                                           name="quantity"
                                           value="@Model.Quantity"
                                           min="1"
                                           max="@(Model.Product?.Stock ?? 1)"
                                    @((Model.Product?.Stock ?? 0) <= 0 ? "disabled=\"disabled\"" : "") />
                                    <div class="input-group-append">
                                        <button class="btn btn-outline-primary js-btn-plus" type="button" @((Model.Product?.Stock ?? 0) <= 0 ? "disabled=\"disabled\"" : "")>&plus;</button>
                                    </div>
                                </div>
                            </div>


                            <p>
                                <button type="submit" class="buy-now btn btn-sm height-auto px-4 py-3 btn-primary" @((Model.Product?.Stock ?? 0) <= 0 ? "disabled" : "")>
                                    Add To Cart
                                </button>
                            </p>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="site-section bg-secondary bg-image" style="background-image: url('/landing/images/bg_2.jpg');">
    <div class="container">
        <div class="row align-items-stretch">
            <div class="col-lg-6 mb-5 mb-lg-0">
                <a href="#" class="banner-1 h-100 d-flex" style="background-image: url('/landing/images/bg_1.jpg');">
                    <div class="banner-1-inner align-self-center">
                        <h2>Pharma Products</h2>
                        <p>
                            Pharmaceutical products are substances used to diagnose, treat, cure, or prevent diseases and health conditions.
                            They include prescription drugs, over-the-counter (OTC) medicines, vaccines, biologics, and supplements.
                        </p>
                    </div>
                </a>
            </div>
            <div class="col-lg-6 mb-5 mb-lg-0">
                <a href="#" class="banner-1 h-100 d-flex" style="background-image: url('/landing/images/bg_2.jpg');">
                    <div class="banner-1-inner ml-auto align-self-center justify">
                        <h2>Rated by Experts</h2>
                        <p>
                            ABD Pharma is widely regarded as one of the most trusted pharmaceutical providers, consistently rated highly by
                            healthcare experts and professionals.
                        </p>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>
