@model CategoryIndexViewModel

@{
    ViewData["Title"] = "Category Management";
}


<link href="~/css/datatables.min.css" rel="stylesheet" />

<h2 class="mb-5">Category Management</h2>

<div class="row">
    <!-- Form -->
    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-header bg-success text-white text-center">
                <h4 class="mb-0">@((Model.Category.Id == 0) ? "Create Category" : "Edit Category")</h4>
            </div>
            <div class="card-body">
                <form asp-action="SaveCategory" method="post">
                    <input type="hidden" asp-for="Category.Id" />

                    <div class="form-group mb-3">
                        <label asp-for="Category.Name" class="control-label">
                            Category Name <span style="color: red;">*</span>
                        </label>
                        <input asp-for="Category.Name" class="form-control" />
                        <span asp-validation-for="Category.Name" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Category.Description" class="control-label"></label>
                        <input asp-for="Category.Description" class="form-control" />
                        <span asp-validation-for="Category.Description" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-primary">
                            @(Model.Category.Id == 0 ? "Add" : "Update")
                        </button>
                        <a asp-action="Category" class="btn btn-secondary ms-2">Clear</a>
                    </div>
                </form>
            </div>
        </div>
    </div>


    <!-- List -->
    <div class="col-md-8">
        <h4>Category List</h4>
        <table class="table table-bordered table-striped" id="CategoryList">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th style="width: 150px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Categories)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>
                            <a asp-action="EditCategory" asp-route-id="@item.Id" class="btn btn-sm btn-info">Edit</a>
                            <a asp-action="DeleteCategory" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<script src="~/lib/jquery/dist/jquery.min.js"></script>@* age javascript then datatables dite hobe*@
<script src="~/js/datatables.min.js"></script>

<script>
    new DataTable('#CategoryList');
</script>
