@model Purchase
@{
    Layout= null;
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Print Purchase - @Model.PurchaseCode</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>


        .invoice {
            max-width: 700px;
            margin: 30px auto;
            padding: 30px;
            border: 1px solid #ccc;
            background: #fff;
        }

        .table th {
            background-color: #f8f9fa !important;
        }

        .total {
            font-size: 1.3rem;
            font-weight: bold;
            text-align: right;
            margin-top: 20px;
        }
    </style>
</head>
<body onload="window.print()">

    <div class="invoice">
        <div class="text-center mb-4">
            <h2>Purchase Invoice</h2>
        </div>

        <div class="row mb-3">
            <div class="col-sm-6">
                <p><strong>Purchase Code:</strong>@(string.IsNullOrEmpty(Model.PurchaseCode) ? "PUR-" + DateTime.Now.ToString("yyyyMMdd") : Model.PurchaseCode)</p>
                <p><strong>Supplier:</strong> @Model.Supplier?.Name</p>
            </div>
            <div class="col-sm-6 text-sm-end">
                <p><strong>Purchase Date:</strong> @Model.PurchaseDate?.ToString("MM/dd/yyyy")</p>
            </div>
        </div>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Quantity</th>
                    <th>Unit Price</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.Product?.ProductName</td>
                    <td>@Model.Quantity</td>
                    <td>@Model.Price</td>
                    <td>@Model.Total</td>
                </tr>
            </tbody>
        </table>

        <p class="total">Grand Total: @Model.Total</p>
    </div>

</body>
</html>
