@model SupplierViewModel

@{
    ViewData["Title"] = "Supplier Management";
}
<link href="~/css/datatables.min.css" rel="stylesheet" />

<h2 class="mb-5">Supplier Management</h2>

<div class="row">
    <!-- Form -->

    <div class="col-md-4">
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-success text-white text-center">
                <h4 class="mb-0">Create Supplier</h4>
            </div>
        </div>
        <form asp-action="Save">
            <input type="hidden" asp-for="Supplier.Id" />

            <div class="form-group">
                <label asp-for="Supplier.Name">Supplier Name<span style="color: red;">*</span></label>
                <input asp-for="Supplier.Name" class="form-control" />
                <span asp-validation-for="Supplier.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Supplier.CompanyName">Company Name<span style="color: red;">*</span></label>
                <input asp-for="Supplier.CompanyName" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Supplier.Phone">Phone Number<span style="color: red;">*</span></label>
                <input asp-for="Supplier.Phone" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Supplier.Email">Email<span style="color: red;">*</span></label>
                <input asp-for="Supplier.Email" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Supplier.Address">Address<span style="color: red;">*</span></label>
                <textarea asp-for="Supplier.Address" class="form-control"></textarea>
            </div>

            <button type="submit" class="btn btn-success mt-2">@(Model.Supplier.Id == 0 ? "Add Supplier" : "Update")</button>
            <a asp-action="Index" class="btn btn-secondary mt-2">Clear</a>
        </form>
    </div>

    <!-- List -->
    <div class="col-md-8">
        <h4>Supplier List</h4>
        <table class="table table-bordered table-striped" id="SupplierList">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Company</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th style="width:150px">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Suppliers)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.CompanyName</td>
                        <td>@item.Phone</td>
                        <td>@item.Email</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-info">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<script src="~/lib/jquery/dist/jquery.min.js"></script>@* age javascript then datatables dite hobe*@
<script src="~/js/datatables.min.js"></script>

<script>
    new DataTable('#SupplierList');
</script>
